<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPink"
    tools:context=".ui.account.Change_account">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:srcCompat="@drawable/ic_baseline_person_24"></ImageView>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="@string/tv_Manv"
            android:textSize="20dp"
            android:layout_marginStart="20dp"/>

      <EditText
            android:id="@+id/txtmanv"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:background="@color/colorWhite"
            android:hint="@string/edtManv"
            android:textSize="20dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="@string/tv_tennv"
            android:textSize="20dp"
            android:layout_marginStart="20dp"/>

        <EditText
            android:id="@+id/txtHoTen"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:background="@color/colorWhite"
            android:hint="@string/edtTennv"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:text="@string/tv_chucvu"
            android:layout_marginStart="20dp" />


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp">

            <RadioButton
                android:id="@+id/txt_Quanly"
                android:layout_width="120dp"
                android:text="Quản lý"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:hint="@string/rdbQuanly">
            </RadioButton>
            <RadioButton
                android:id="@+id/txt_Nhanvien"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:text="Nhân viên"
                android:textSize="18dp"
                android:textStyle="bold"
                android:hint="@string/rdbNhanvien">
            </RadioButton>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="@string/tv_sdt"
            android:textSize="20dp"
            android:layout_marginStart="20dp" />

        <EditText
            android:id="@+id/txtsdtnv"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:background="@color/colorWhite"
            android:hint="@string/edt_sdt"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:text="@string/tv_Gioitinh"
            android:layout_marginStart="20dp" />


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp">

            <RadioButton
                android:id="@+id/txt_Nam"
                android:layout_width="120dp"
                android:text="Nam"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginLeft="30dp"
                android:layout_height="40dp"
                android:hint="@string/edtgioitinh">
            </RadioButton>
            <RadioButton
                android:id="@+id/txt_Nu"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:text="Nữ"
                android:textSize="18dp"
                android:textStyle="bold"
                android:hint="@string/edtgioitinh">
            </RadioButton>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

    <TextView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:text="@string/tv_ngaysinh"
        android:textSize="20dp" />
        <EditText
            android:id="@+id/txtngaysinh"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:background="@color/colorWhite"
            android:hint="@string/edtngaysinh"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="@string/tv_taikhoan"
            android:textSize="20dp"
            android:layout_marginStart="20dp" />

        <EditText
            android:id="@+id/txtAccount"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:background="@color/colorWhite"
            android:hint="@string/edtTaikhoan"
            android:textSize="20dp" />
     </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:text="@string/tv_Password"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/txtpass"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:background="@color/colorWhite"
            android:hint="@string/edtmatkhau"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12">

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:text="@string/tv_email"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/txtmail"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:background="@color/colorWhite"
            android:hint="@string/edt_email"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout13">
        <Button
            android:id="@+id/btnTao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/btntaotaikhoan"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>