    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"/>

        <EditText
            android:id="@+id/txtmanv"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="35dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:hint="@string/edtManv"
            android:textSize="20dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp" />

        <EditText
            android:id="@+id/txtnamenv"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="35dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:hint="@string/edtTennv"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            />

        <EditText
            android:id="@+id/txtchucvunv"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="35dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:hint="@string/edtchucvu"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp" />

        <EditText
            android:id="@+id/txtsdtnv"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="35dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:hint="@string/edt_sdt"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp" />


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp">

            <RadioButton
                android:id="@+id/txt_Nam"
                android:layout_width="100dp"
                android:text="Nam"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_height="40dp"
                android:hint="@string/edtgioitinh">
            </RadioButton>
            <RadioButton
                android:id="@+id/txt_Nu"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:text="Ná»¯"
                android:textSize="18dp"
                android:textStyle="bold"
                android:hint="@string/edtgioitinh">
            </RadioButton>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="@string/tv_ngaysinh"
        android:textSize="20dp" />
        <EditText
            android:id="@+id/txtngaysinh"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="35dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:hint="@string/edtngaysinh"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
/>

        <EditText
            android:id="@+id/txtAccount"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="35dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:hint="@string/edtTaikhoan"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11">


        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"

 />

        <EditText
            android:id="@+id/txtpass"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="35dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:hint="@string/edtmatkhau"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12">
        <Button
            android:id="@+id/btnTao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/btntaotaikhoan"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>