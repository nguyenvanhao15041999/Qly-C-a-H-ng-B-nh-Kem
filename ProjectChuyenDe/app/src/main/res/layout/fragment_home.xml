<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPink"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnBanh"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Bánh"
            android:background="@color/colorRedPink"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:layout_marginRight="5dp"></Button>

        <Button
            android:id="@+id/btnNuoc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Nước uống"
            android:background="@color/colorRedPink"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"></Button>
    </LinearLayout>

    <ListView
        android:id="@+id/lvDanhsach"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnKhu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Khu (Đặt Bàn)"
            android:background="@color/colorGreenDank"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:layout_marginRight="20dp"></Button>

        <Button
            android:id="@+id/btnDattiec"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Đặt Tiệc"
            android:background="@color/colorGreenDank"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"></Button>
    </LinearLayout>
</LinearLayout>