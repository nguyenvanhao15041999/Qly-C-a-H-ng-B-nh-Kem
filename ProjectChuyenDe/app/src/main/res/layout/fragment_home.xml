<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPink"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBanh"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@color/colorRedPink"
                android:text="@string/btnBanh"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"></Button>

            <Button
                android:id="@+id/btnNuoc"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/colorRedPink"
                android:text="@string/btnNuoc"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"></Button>
        </LinearLayout>

        <ListView
            android:id="@+id/lvDanhsachHome"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorWhite"
            android:layout_marginRight="5dp"></ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnKhu"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@color/colorGreenDank"
                android:text="@string/btnKhu"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"></Button>

            <Button
                android:id="@+id/btnDattiec"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@color/colorGreenDank"
                android:text="@string/btnDatTiec"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"></Button>
        </LinearLayout>
    </LinearLayout>
</ScrollView>