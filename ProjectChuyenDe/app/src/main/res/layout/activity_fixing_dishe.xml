<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPink"
    android:orientation="vertical"
    tools:context=".ui.account.Staff_inform">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <include layout="@layout/toolbar_edit_food"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="@string/txtTenSanPham"
            android:textSize="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/edtTenSanPham"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="35dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="@string/txtLoaiSanPham"
            android:textSize="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:id="@+id/edtLoaiSanPham"
            android:layout_marginStart="35dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="@string/txtDiaChi"
            android:textSize="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/edtDiaChi"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="35dp"
            android:background="@color/colorWhite"
            android:gravity="center"

            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="@string/txtGia"
            android:textSize="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/txtGia"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="35dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="@string/txtHinhAnh"
            android:textSize="20dp"
            android:layout_marginStart="20dp" />


        <TextView
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:id="@+id/txtHinhAnh"
            android:layout_marginStart="35dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

        <Button
            android:id="@+id/btnSuaMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnSuaMon"
             />
    </LinearLayout>
</LinearLayout>