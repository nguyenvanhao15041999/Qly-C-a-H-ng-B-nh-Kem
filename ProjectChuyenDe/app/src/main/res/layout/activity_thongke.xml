<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPink"
    tools:context=".ui.statistical.Thongke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <include
            android:id="@+id/include4"
            layout="@layout/toolbar_thongke" />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="5dp"
             android:orientation="horizontal">

             <ImageView
                 android:id="@+id/imgAnhStaff"
                 android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:layout_marginRight="5dp"
                 android:src="@drawable/ic_baseline_person_24">
             </ImageView>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginBottom="10dp"
                     android:layout_marginTop="15dp" >

                     <TextView
                         android:layout_width="100dp"
                         android:layout_height="wrap_content"
                         android:text="@string/tv_chucvu"
                         android:textSize="20dp"/>

                     <TextView
                         android:id="@+id/txtchucvunv"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:gravity="center"
                         android:background="@color/colorWhite"
                         android:layout_marginLeft="5dp"
                         android:hint="@string/txt_chucvu"
                         android:textSize="20dp" />
                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp">

                     <TextView
                         android:layout_width="100dp"
                         android:layout_height="wrap_content"
                         android:text="@string/tv_tennv"
                         android:textSize="20dp"/>

                     <TextView
                         android:id="@+id/txtnamenv"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="5dp"
                         android:background="@color/colorWhite"
                         android:gravity="center"
                         android:hint="@string/txt_tennv"
                         android:textSize="20dp" />
                 </LinearLayout>

             </LinearLayout>

         </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Danh sách Hoá đơn trong ngày:"
            android:textSize="20dp" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:layout_marginBottom="10dp"
            android:shrinkColumns="0"
            android:stretchColumns="0,1,2,3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:background="#8FC982"
                    android:gravity="center"

                    android:text="Mã HD" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:background="#8FC982"
                    android:gravity="center"
                    android:text="Tên KH" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:background="#8FC982"
                    android:gravity="center"
                    android:text="Khu Vực" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:background="#8FC982"
                    android:gravity="center"
                    android:text="Thành Tiền" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />

                <EditText
                    android:gravity="center"
                    android:text="" />
            </TableRow>




        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTongTien"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Số Hoá đơn trong ngày"
                android:layout_marginRight="5dp"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/tvTien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/colorWhite"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="3"
                android:textSize="20dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@color/colorRed"
                android:text="IN"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"></Button>
        </LinearLayout>
    </LinearLayout>
</ScrollView>