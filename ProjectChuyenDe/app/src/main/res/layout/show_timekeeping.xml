<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtNgaycong" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtTonggio" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtLuongcb" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtTongluong" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="điền vào chổ trống"
                android:id="@+id/tv_nameTime_TK"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="điền vào chổ trống"
                android:id="@+id/tv_timeTime_TK"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="điền vào chổ trống"
                android:id="@+id/tv_totalHour_TK"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="điền vào chổ trống"
                android:id="@+id/tv_salary_TK"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="điền vào chổ trống"
                android:id="@+id/tv_totalSalary_TK"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>