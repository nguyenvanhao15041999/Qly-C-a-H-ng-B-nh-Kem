<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="18dp"
                android:text="Phương Thức Thanh Toán"
                android:textStyle="bold"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_margin="20dp">

                <RadioButton

                    android:id="@+id/radTrucTiep"
                    android:layout_width="200dp"
                    android:text="@string/radTrucTiep"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_height="50dp"
                    >
                </RadioButton>
                <RadioButton

                    android:id="@+id/radChuyenKhoan"
                    android:layout_width="200dp"
                    android:text="@string/radChuyenKhoan"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_height="50dp"
                    >
                </RadioButton>
            </RadioGroup>
        </LinearLayout>


        <TextView
            android:id="@+id/edtDanhGia"
            android:layout_width="340dp"
            android:layout_height="300dp"
            android:layout_marginStart="30dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:hint="@string/edtDanhGia"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnThanhToan"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@color/colorWhite"
                android:text="@string/btnThanhToan"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"></Button>

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@color/colorWhite"
                android:text="@string/btnHuy"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>